<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-graph-up"></i> Field Officer Billing Reports</h2>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form action="/billing/reports" method="GET" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Month</label>
                <select name="month" class="form-select">
                    <% for(let i=1; i<=12; i++) { %>
                        <option value="<%= i %>" <%=filters.month==i ? 'selected' : '' %>>
                            <%= new Date(2000, i-1, 1).toLocaleString('default', { month: 'long' }) %>
                        </option>
                        <% } %>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Year</label>
                <select name="year" class="form-select">
                    <% const currentYear=new Date().getFullYear(); %>
                        <% for(let i=currentYear; i>=currentYear-2; i--) { %>
                            <option value="<%= i %>" <%=filters.year==i ? 'selected' : '' %>><%= i %>
                            </option>
                            <% } %>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Field Officer</label>
                <select name="field_officer_id" class="form-select">
                    <option value="">All Field Officers</option>
                    <% fieldOfficers.forEach(fo=> { %>
                        <option value="<%= fo.id %>" <%=filters.field_officer_id==fo.id ? 'selected' : '' %>>
                            <%= fo.name %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-filter"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <% Object.values(billingData).forEach(fo=> { %>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <%= fo.name %>
                    </h5>
                    <span class="badge bg-success fs-6">₹ <%= fo.total_approved_fo.toFixed(2) %></span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 300px;">
                        <table class="table table-sm table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Case ID</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% fo.cases.forEach(c=> { %>
                                    <tr>
                                        <td>
                                            <%= new Date(c.date).toLocaleDateString('en-IN') %>
                                        </td>
                                        <td>
                                            <a href="/cases/<%= c.case_id %>" class="text-decoration-none">
                                                <%= c.case_id %>
                                            </a>
                                        </td>
                                        <td class="text-end">₹ <%= c.amount.toFixed(2) %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% if (fo.cases.length===0) { %>
                                            <tr>
                                                <td colspan="3" class="text-center text-muted">No cases found</td>
                                            </tr>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-muted font-monospace small">
                    Total Cases: <%= fo.cases.length %>
                </div>
            </div>
        </div>
        <% }); %>

            <% if (Object.keys(billingData).length===0) { %>
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        No billing data found for the selected filters.
                    </div>
                </div>
                <% } %>
</div>