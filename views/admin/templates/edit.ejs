<h2 class="mb-4"><i class="bi bi-pencil"></i> Edit Template</h2>

<div class="card mb-4">
    <div class="card-header">Available Placeholders</div>
    <div class="card-body">
        <p class="text-muted">Use these placeholders in your template:</p>
        <div class="row small">
            <div class="col-md-3">
                <code>{{case_id}}</code>, <code>{{insurance_company}}</code>,
                <code>{{patient_name}}</code>, <code>{{patient_age}}</code>, <code>{{patient_gender}}</code>
            </div>
            <div class="col-md-3">
                <code>{{hospital_name}}</code>, <code>{{hospital_address}}</code>, <code>{{doctor_name}}</code>
            </div>
            <div class="col-md-3">
                <code>{{policy_number}}</code>, <code>{{claim_amount}}</code>, <code>{{sum_insured}}</code>
            </div>
            <div class="col-md-3">
                <code>{{investigation_findings}}</code>, <code>{{conclusion}}</code>, <code>{{recommendation}}</code>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form action="/admin/templates/<%= template.id %>" method="POST">
            <div class="mb-3">
                <label for="insurance_company" class="form-label">Insurance Company *</label>
                <input type="text" class="form-control" id="insurance_company" name="insurance_company"
                    value="<%= template.insurance_company %>" required>
            </div>

            <div class="mb-3">
                <label for="template_name" class="form-label">Template Name *</label>
                <input type="text" class="form-control" id="template_name" name="template_name"
                    value="<%= template.template_name %>" required>
            </div>

            <div class="mb-3">
                <label for="template_content" class="form-label">Template Content *</label>
                <textarea class="form-control" id="template_content" name="template_content" rows="20"
                    style="font-family: monospace;" required><%= template.template_content %></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/admin/templates" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Template
                </button>
            </div>
        </form>
    </div>
</div>