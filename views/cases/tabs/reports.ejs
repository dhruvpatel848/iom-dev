<div class="card mb-3">
    <div class="card-header">Generate New Report</div>
    <div class="card-body">
        <a href="/reports/cases/<%= caseData.id %>/create" class="btn btn-success">
            <i class="bi bi-file-earmark-text"></i> Generate Investigation Report
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">Generated Reports (<%= caseData.generatedReports?.length || 0 %>)</div>
    <div class="card-body">
        <% if (!caseData.generatedReports || caseData.generatedReports.length===0) { %>
            <p class="text-muted">No reports generated yet.</p>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Generated Date</th>
                                <th>Generated By</th>
                                <th>Conclusion</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% caseData.generatedReports.forEach(function(report) { %>
                                <tr>
                                    <td>
                                        <%= new Date(report.createdAt).toLocaleString('en-IN') %>
                                    </td>
                                    <td>
                                        <%= report.generator?.name || '-' %>
                                    </td>
                                    <td>
                                        <%= report.conclusion.substring(0, 100) %>...
                                    </td>
                                    <td>
                                        <a href="/reports/<%= report.id %>/download"
                                            class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                        <% if (['admin', 'super_admin'].includes(user.role)) { %>
                                            <button onclick="deleteReport(<%= report.id %>)"
                                                class="btn btn-sm btn-outline-danger ms-1">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </div>
</div>

<% if (['admin', 'super_admin'].includes(user.role)) { %>
<script>
    async function deleteReport(reportId) {
        if (!confirm('Are you sure you want to delete this report? This action cannot be undone.')) {
            return;
        }

        try {
            const response = await fetch(`/reports/${reportId}`, {
                method: 'DELETE'
            });

            if (response.ok) {
                location.reload();
            } else {
                const result = await response.json();
                alert(result.message || 'Error deleting report');
            }
        } catch (error) {
            alert('Error deleting report: ' + error.message);
        }
    }
</script>
<% } %>