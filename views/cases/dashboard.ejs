<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-speedometer"></i> My Dashboard</h2>
            <p class="text-muted mb-0">Overview of your assigned cases</p>
        </div>
        <div>
            <% if (user.role !=='field_officer' ) { %>
                <a href="/cases/create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Create New Case
                </a>
                <% } %>
        </div>
    </div>

    <!-- Case Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Cases</h6>
                            <h2 class="mt-2 mb-0">
                                <%= stats.total %>
                            </h2>
                        </div>
                        <i class="bi bi-folder-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white h-100" style="background-color: #f39c12;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">In Progress</h6>
                            <h2 class="mt-2 mb-0">
                                <%= stats.in_progress %>
                            </h2>
                        </div>
                        <i class="bi bi-hourglass-split fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Closed Cases</h6>
                            <h2 class="mt-2 mb-0">
                                <%= stats.closed %>
                            </h2>
                        </div>
                        <i class="bi bi-check-circle-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Open Cases</h6>
                            <h2 class="mt-2 mb-0">
                                <%= stats.open %>
                            </h2>
                        </div>
                        <i class="bi bi-exclamation-circle-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Cases -->
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Cases</h5>
                    <a href="/cases" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Case ID</th>
                                    <th>Company</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentCases.forEach(c=> { %>
                                    <tr>
                                        <td>
                                            <div class="fw-bold">
                                                <%= c.case_id %>
                                            </div>
                                        </td>
                                        <td>
                                            <%= c.insurance_company %>
                                        </td>
                                        <td>
                                            <span
                                                class="badge bg-<%= c.status === 'open' ? 'primary' : c.status === 'in_progress' ? 'warning' : 'success' %>">
                                                <%= c.status.toUpperCase().replace('_', ' ' ) %>
                                            </span>
                                        </td>
                                        <td>
                                            <%= new Date(c.updatedAt).toLocaleDateString('en-IN') %>
                                        </td>
                                        <td>
                                            <a href="/cases/<%= c.id %>" class="btn btn-sm btn-outline-primary">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% if (recentCases.length===0) { %>
                                            <tr>
                                                <td colspan="5" class="text-center py-4 text-muted">No cases found.
                                                    Start by creating one!</td>
                                            </tr>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links / Info -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Instructions</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Welcome to your dashboard. Here you can track your assigned investigations.
                    </p>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-circle-fill text-primary small me-2"></i>
                            <strong>Open:</strong> New cases assigned to you.
                        </li>
                        <li class="mb-2"><i class="bi bi-circle-fill text-warning small me-2"></i> <strong>In
                                Progress:</strong> Cases currently being investigated.</li>
                        <li class="mb-2"><i class="bi bi-circle-fill text-success small me-2"></i>
                            <strong>Closed:</strong> Completed investigations.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>